{
  "name": "pall",
  "description": "Pick a color. Anywhere.",
  "author": {
    "name": "Dani A. Ona",
    "url": "https:://dandansoysauce.github.io",
    "email": "ona.dani.a@gmail.com"
  },
  "version": "3.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^8.0.0",
    "electron-window-state": "^5.0.3",
    "hex2rgb": "^2.2.0",
    "jimp": "^0.16.1",
    "keyboardjs": "^2.6.4",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "@electron/remote": "^1.2.1",
    "electron": "^14.2.4",
    "electron-builder": "^22.11.7",
    "electron-webpack": "^2.8.2",
    "webpack": "^4.26.0"
  },
  "build": {
    "appId": "com.daniona.pall",
    "productName": "Pall - Color Picker",
    "extraFiles": "build/icon-mini.png",
    "mac": {
      "publish": "github"
    },
    "win": {
      "publish": "github"
    },
    "linux": {
      "target": [
        {
          "target": "snap"
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": "github"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dandansoysauce/pall"
  }
}
