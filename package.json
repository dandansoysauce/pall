{
  "name": "pall",
  "description": "Pick a color. Anywhere.",
  "author": {
    "name": "Dani A. Ona", 
    "url": "https:://dandansoysauce.github.io",
    "email": "ona.dani.a@gmail.com"
  },
  "version": "1.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:snap": "yarn compile && electron-builder --linux snap --x64",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-store": "^2.0.0",
    "electron-window-state": "^5.0.3",
    "hex2rgb": "^2.2.0",
    "jimp": "^0.6.0",
    "source-map-support": "^0.5.9"
  },
  "devDependencies": {
    "electron": "3.0.10",
    "electron-builder": "^20.36.2",
    "electron-webpack": "^2.6.1",
    "webpack": "^4.26.0"
  },
  "build": {
    "appId": "com.daniona.pall",
    "productName": "Pall - Color Picker",
    "mac": {
      "publish": "github"
    },
    "win": {
      "publish": "github"
    },
    "linux": {
      "artifactName": "${name}.${ext}",
      "publish": "github"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dandansoysauce/pall"
  }
}
